<!DOCTYPE html>
<html class="h-100">
    {% set route_name = app.request.attributes.get('_route', '') %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %} | La-la-land{% endblock %}</title>

        {% block stylesheets %}
            {# Bootstrap #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">            
            {# Font Awesome #}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
            {# Own CSS #}
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
        
    </head>
    <body class="d-flex flex-column">
        <div>            
            {{ render(controller('App\\Controller\\BaseController::header', {'routeName' : route_name } )) }}

            <div class="row gx-0 position-relative">             
                <div class="musics_box show">
                    {{ render(controller('App\\Controller\\BaseController::musics', {'routeName' : route_name } )) }}
                </div>
                <div class="main col-8 offset-lg-2">
                    <div class="body">
                        {% include 'base/_flash.html.twig' %}
                        {% block body %}

                        
                        
                        {% endblock %}
                        {% include "tchat/tchat.html.twig" %}
                    </div>
                  
                    <div class="footer">
                        {% include 'base/_footer.html.twig' %} 
                    </div>                    
                </div>
                <div class="friends_box show">
                     {{ render(controller('App\\Controller\\BaseController::friends', {'routeName' : route_name } )) }}
                </div>                
            </div>            

        </div>

        

        {% block javascripts %}
            {# Jquery #}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            {# Bootstrap #}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>           
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
            {# Own script #}
            <script src="{{ asset('js/script.js') }}"></script>
            <script src="{{ asset('js/player.js') }}"></script>
            <script src="{{ asset('js/tchat.js') }}"></script>
            <script type="module" src="{{ asset('js/dragDrop.js') }}"></script>
        {% endblock %}
    </body>
</html>
