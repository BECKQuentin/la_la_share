{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-mx-auto mt-3">
            <h3>Ajouter une catégorie</h3>

            {{ form_start(form) }}
                <div class="my-3">
                    {{ form_row(form.title) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.image) }}
                </div>
                {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}